<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="consoleOutput" class="Solution_1_With_XML.ConsoleOutput"/>
    <bean id="keyboardGuess" class="Solution_1_With_XML.KeyboardGuess"/>
    <bean id="guessNumberGame" class="Solution_1_With_XML.GuessNumberGame">
        <constructor-arg type="int" value="15"/>
        <constructor-arg type="int" value="3"/>
        <constructor-arg ref="consoleOutput"/>
        <constructor-arg ref="keyboardGuess"/>
    </bean>


</beans>

